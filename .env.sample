# Default download location (optional - defaults to current directory)
DOWNLOAD_PATH=

# Default video quality (optional - defaults to highest available)
# Options: highest, lowest, audio_only
DEFAULT_QUALITY=highest

# Video Processing Software Environment Variables

# ====== Video Downloader Settings ======
# Default download location (optional - defaults to current directory)
DOWNLOAD_PATH=

# Default video quality (optional - defaults to highest available)
# Options: highest, lowest, audio_only
DEFAULT_QUALITY=highest

# ====== Video Processing Settings ======
# Temporary directory for processing files
TEMP_DIR=./temp

# Default output directory for processed files
OUTPUT_DIR=./output

# ====== Transcription and Diarization Settings ======
# Whisper model to use (tiny, base, small, medium, large)
WHISPER_MODEL=base

# Language code for transcription (e.g., en, es, fr)
TRANSCRIPTION_LANGUAGE=en

# Minimum and maximum number of speakers for diarization
MIN_SPEAKERS=1
MAX_SPEAKERS=5

# Hugging Face token for accessing pyannote.audio models
HUGGINGFACE_TOKEN=

# ====== Slide Detection Settings ======
# Threshold for content detection (0-255)
SLIDE_DETECTION_THRESHOLD=30

# Minimum scene length in seconds
MIN_SCENE_LENGTH=1.0

# Number of frames to skip during detection
FRAME_SKIP=2

# Similarity threshold for unique slides (0-1)
SIMILARITY_THRESHOLD=0.9

# ====== OCR Settings ======
# Languages for OCR (e.g., eng, spa, fra)
OCR_LANGUAGES=eng

# Whether to preprocess images before OCR
OCR_PREPROCESSING=true

# ====== Markdown Generation Settings ======
# Whether to save JSON data alongside Markdown
SAVE_JSON=true

# Whether to include timestamps in transcription
INCLUDE_TIMESTAMPS=true